<footer class="footer-main">
	<div class="footer-main__container container">
		<nav aria-label="Find out more" class="footer-main__nav footer-main__left">
			{# <ul>
				{%- for footer in collections.footerNav -%}
				<li>
					<a href="{{ footer.url | url }}"{% if footer.url == page.url %} data-current="current item" class="current"{% endif %}>{{ footer.data.navtitle }}</a>
				</li>
				{%- endfor -%}
			</ul> #}
			{% set navPages = collections.all | eleventyNavigation %}
			<ul class="footer-main__nav__list">
			{% set cls = cycler("odd", "even") %}
			{%- for entry in navPages %}
			{% if entry.url != "/" %}
				<li {% activepath entry.url, page.url %} class="{{ cls.next() }}">
					<a href="{{ entry.url }}">{{ entry.title }}</a>
				</li>
			{% endif %}
			{%- endfor %}
			</ul>
		</nav>
		<div class="footer-main__container__contact-me footer__nav footer-main__right">
			<h3 class="h4-style">Follow me on:</h3>
			<dl class="footer-main__container__contact-me__list">
				{% for item in metadata.social_site %}
				<dt>{{ item.name }}</dt>
				<dd><a href="{{ item.url }}" rel="noreferrer noopener{% if item.rel %} {{ item.rel }}{% endif %}" target="_blank" class="social-site {{ item.machine_name }}{% if item.no_icon %} social-site--no-icon{% endif %}">{{ item.alias }}</a></dd>
				{% endfor %}
			</dl>
		</div>
	</div>
</footer>
