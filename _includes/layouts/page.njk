---
layout: base.njk
section: page
---

	{% if image.path %}
			<figure class="{{ image.figureClass.page }}">
			{% image image.path, image.alt, image.class, image.pictureClass.page %}
			{% if image.caption %}
			<figcaption>{{ image.caption | safe }}{% if image.credit %} {{ image.credit | safe }}{% endif %}</figcaption>
			{% endif %}
			</figure>
	{% endif %}

{% set pageTags = [] %}
{%- for tag in tags %}
	{% if tag | starts_with("#", true) %}
	{% set pageTags = (pageTags.push(tag), pageTags) %}
	{% endif %}
{% endfor %}

	{% if description %}
	<div class="page__summary{% if page.class %}{% if page.class.includes('page--summary--wide') %} content-canvas-item-full content-canvas site-content--small-padding{% elif page.class.includes('page--with-hero') %} content-canvas-item-full content-canvas site-content site-content--zero-spacing{% else %} content-canvas-item-wide-left{% endif %}{% endif %}{% if tags | hasTag('#writing') and page.class %}{% if summary.class %} {{ summary.class }}{% elif page.class.includes('page--writing--light') %} site-content--surface-black-light site-content--surface-dark{% endif %}{% endif %}">

		{% if tags | hasTag('#writing') %}
		<div class="metadata{% if page.class and (page.class.includes('page--with-hero') or page.class.includes('page--summary--wide')) %} content-canvas-item-wide-left{% endif %}">
			<div class="metadata__tags">
				{%- for topic in pageTags %}
				{% set t = topic | slug %}
					<span class="metadata__tags__tag"><a href="{{ ['/tag/', t] | join | url }}"{% if page.class and page.class.includes('page--writing--light')%} class="light"{% endif %}>{{ topic }}</a></span>
						{% if loop.last !== true %}
					<span class="metadata__divider divider"></span>
					{% endif %}
					
				{% endfor %}
			</div>
		</div>
		{% endif %}
		<div class="page__summary__content{% if page.class and (page.class.includes('page--with-hero') or page.class.includes('page--summary--wide')) %} content-canvas-item-wide-left{% endif %}">
			{{ description | markdown | safe }}
		</div>
	</div>
	{% endif %}

	{% if metadata.show !== false %}
	<div class="metadata page__metadata">
		{% if tags | hasTag('#writing', false) %}
		<div class="metadata__tags">
			{%- for topic in pageTags %}
				{% if topic | starts_with("#", true) %}
				{% set t = topic | slug %}
				<span class="metadata__tags__tag">
					{% if topic in ['Reading', 'Writing', 'Thinking'] %}
					<a href="/{{ t | url }}">{{ topic }}</a>
					{% else %}
					<a href="{{ ['/tag/', t] | join | url }}">{{ topic }}</a>
					{% endif %}
				</span>
					{% if loop.last !== true %}
				<span class="metadata__divider divider"></span>
				{% endif %}
				{% endif %}
				
			{% endfor %}
		</div>
		{% endif %}

		<div class="metadata__info">
			<time class="metadata__date" datetime="{{ page.date | readableDate("yyyy-LL-dd") }}">{{ page.date | readableDate("LLLL yyyy") }}</time>
			<span class="metadata__divider divider"></span>
			<span class="metadata__reading-time">{{ content | timeToRead }} read</span>
		</div>
	</div>
	{% endif %}

	{{ layoutContent | safe }}

	{% include "layouts/components/page-footer.njk" %}
