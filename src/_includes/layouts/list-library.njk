---
layout: base.njk
list: true
styles:
  internal:
    - list-library.css
    - dbl.css
    - modal.css
  external:
    - "https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css"
scripts:
  internal:
    - modal-newsletter.js
  external:
    - "https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"
---

  <div class="site-content site-content--zero-top-padding content-canvas">
    
    <div class="site-content{% if pageClass %} {{ pageClass }} {% else %} site-content--surface-teal site-content--surface-dark{% endif %} jumbotron content-canvas-item-full content-canvas item-fade-in item-fade-in-1-5">

      {% include "layouts/components/title-bar.njk" %}

    </div>
    {% if content %}
    <div class="site-content content-canvas-item-full content-canvas">
      
      {{ content | safe }}
    </div>
    {% endif %}
    <div class="site-content content-canvas-item-wide">

      {% include "layouts/components/index-list.njk" %}

    </div>

    {% if listFooter %}
    <div class="list-footer margin-block-vlg">
      {{ listFooter | markdown | safe }}
    </div>
    {% endif %}

  </div>

  {% include "layouts/components/newsletter-modal.njk" %}